{
    "name": "yootheme/starter-plugin",
    "description": "YOOtheme Pro - Starter Plugin",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "joomla",
        "wordpress",
        "yootheme"
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "yootheme/starter-utils": "@dev"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../starter-utils"
        }
    ],
    "scripts": {
        "run:task": "YOOtheme\\Starter\\TaskHelper::run",
        "create:plugin": "YOOtheme\\Starter\\CreatePluginCommand",
        "create:element": "YOOtheme\\Starter\\CreateElementCommand",
        "post-create-project-cmd": "YOOtheme\\Starter\\CreatePluginCommand"
    }
}
